{
  "name": "echarts-chain",
  "version": "1.0.0",
  "description": "A webpack-chain inspired API for generating ECharts configurations",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "pnpm clean && rollup -c ./rollup.config.js",
    "build:watch": "pnpm clean && rollup -w -c ./rollup.config.js",
    "clean": "rimraf dist",
    "postinstall": "husky install",
    "example": "ts-node examples/basic.ts",
    "lint": "eslint --no-ignore src/**/*",
    "lint:fix": "eslint src/**/* --fix",
    "format": "prettier --write \"src/**/*.ts\" \"examples/**/*.ts\""
  },
  "keywords": [
    "echarts",
    "chain",
    "configuration",
    "webpack-chain",
    "fluent-api",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "echarts": "^5.4.3",
    "eslint": "^8.54.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.53.3",
    "ts-node": "^10.9.2",
    "typescript": "~5.3.3"
  },
  "peerDependencies": {
    "echarts": "^5.0.0 || ^6.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@7.33.5+sha512.4e499f22fffe5845aa8f9463e1386b2d72c3134e0ebef9409360ad844fef0290e82b479b32eb2ec0f30e56607e1820c22167829fd62656d41a8fd0cc4a0f4267",
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
