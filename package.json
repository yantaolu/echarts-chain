{
  "name": "echarts-chain",
  "version": "1.0.1",
  "description": "A webpack-chain inspired API for generating ECharts configurations",
  "main": "lib/index.js",
  "module": "es/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/yantaolu/echarts-chain.git"
  },
  "scripts": {
    "build": "pnpm clean && pnpm build:es && pnpm build:cjs && pnpm build:umd && pnpm build:types",
    "build:es": "tsc -p tsconfig.es.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:types": "tsc -p tsconfig.types.json",
    "build:umd": "rollup -c ./rollup.config.js",
    "build:watch": "pnpm clean && tsc -w -p tsconfig.es.json & tsc -w -p tsconfig.cjs.json & rollup -w -c ./rollup.config.js",
    "clean": "rimraf dist es lib",
    "postinstall": "husky install",
    "example": "ts-node --compiler-options '{\"module\":\"CommonJS\"}' examples/basic.ts",
    "lint": "eslint --no-ignore src/**/*",
    "lint:fix": "eslint src/**/* --fix",
    "format": "prettier --write \"src/**/*.ts\" \"examples/**/*.ts\"",
    "commit": "git-cz"
  },
  "keywords": [
    "echarts",
    "chain",
    "configuration",
    "webpack-chain",
    "fluent-api",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "files": [
    "dist",
    "es",
    "lib"
  ],
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "echarts": "^5.4.3",
    "eslint": "^8.54.0",
    "git-cz": "^4.9.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.53.3",
    "ts-node": "^10.9.2",
    "typescript": "~5.3.3"
  },
  "peerDependencies": {
    "echarts": "^5.0.0 || ^6.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "packageManager": "pnpm@7.33.5+sha512.4e499f22fffe5845aa8f9463e1386b2d72c3134e0ebef9409360ad844fef0290e82b479b32eb2ec0f30e56607e1820c22167829fd62656d41a8fd0cc4a0f4267",
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
